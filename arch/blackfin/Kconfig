mainmenu "uClinux/Blackfin (w/o MMU) Kernel Configuration"

config MMU
	bool
	default n

config FPU
	bool
	default n

config UID16
	bool
	default y

config RWSEM_GENERIC_SPINLOCK
	bool
	default y

config RWSEM_XCHGADD_ALGORITHM
	bool
	default n

config BFIN 
	bool
	default y

source "init/Kconfig"

menu "Processor type and features"

comment "Processor"
choice 
	prompt	"CPU"
	default BF533 

config BF533 
	bool "BF533"
	help
	 BF533 Processor Support.

config BF532 
	bool "BF532"
	help
	 BF532 Processor Support.

config BF531 
	bool "BF531"
	help
	 BF531 Processor Support.

config BF535 
	bool "BF535"
	help
	 BF535 Processor Support.

endchoice

config BLACKFIN
	bool
	depends on (BF535 || BF533 || BF532 || BF531)
	default y

comment "Platform"

choice 
	prompt	"Platform"
	default STAMP 

config EZKIT 
	bool "EZKITLITE board support"
	depends on BF533
	help
	 EZKITLITE board Support.

config MEM_MT48LC16M16A2TG_75
	bool
	depends on EZKIT
	default y

config  BLKFIN_STAMP
	bool "STAMP board support"
	depends on (BF533)
	help
	 STAMP board Support.

config MEM_MT48LC64M4A2FB_7E
	bool
	depends on BLKFIN_STAMP
	default y

config HAWK 
	bool "Hawk Board support"
	depends on BF535
	help
	  Support for Hawk Board.

config EAGLE 
	bool "Eagle Board support"
	depends on BF535
	help
	  Support for Eagle Board.

endchoice

choice
	prompt	"Kernel executes from" 
	---help---
	  Choose the memory type that the kernel will be running in.

config	RAMKERNEL 
	bool "RAM"
	help
	  The kernel will be resident in RAM when running.

config	ROMKERNEL 
	bool "ROM"
	help
	  The kernel will be resident in FLASH/ROM when running.

endchoice

config LARGE_ALLOCS
	bool "Allow allocating large blocks (> 1MB) of memory"
	help
	  Allow the slab memory allocator to keep chains for very large
	  memory sizes - upto 32MB. You may need this if your system has
	  a lot of RAM, and you need to able to allocate very large
	  contiguous chunks. If unsure, say N. 

config IRQCHIP_DEMUX_GPIO
	bool "Enable GPIO IRQ Demultiplexing"
	depends on BLACKFIN
	default n
	help
	  Demultiplex GPIO interrupt, enabling IRQ_PF0 through IRQ_PF15

comment 'DMA Support'
choice
	prompt	"Select DMA driver"
	---help---
	  Choose DMA driver implemntation

config NO_DMA
	bool 'Disable DMA Support' 
	help
	  Disable DMA driver
	
config BLKFIN_SIMPLE_DMA
	bool 'Enable Simple DMA Support' 
	depends on (BF533 || BF532 || BF531) 
	help
	  Simple DMA driver
endchoice

comment 'Cache Support'
config	BLKFIN_CACHE 
	bool "Enable ICACHE" 
config	BLKFIN_DCACHE 
	bool "Enable DCACHE" 
config 	BLKFIN_CACHE_LOCK
	bool "Enable Cache Locking"

choice
	prompt "Policy"
	depends on BLKFIN_DCACHE
	default BLKFIN_WB
config 	BLKFIN_WB
	bool "Write back"
config	BLKFIN_WT
	bool "Write through"	
endchoice

comment 'Crystal Frequency'

config CLKIN_HZ
	int "Crystal"
	default "11059200" if BLKFIN_STAMP
	default "27000000" if EZKIT
	help
	  The frequency of CLKIN crystal oscillator on the board in Hz.

comment 'VCO Multiplier'

config VCO_MULT
	int "VCO Multiplier" 	
	default "22" if EZKIT
	default "45" if BLKFIN_STAMP

comment 'Core Clock Divider'

config CCLK_DIV
	int "Core Clock Divider"
	default 1 if EZKIT
	default 1 if BLKFIN_STAMP

comment 'System Clock Divider'

config SCLK_DIV
	int "System Clock Divider"
	default 5 if EZKIT
	default 4 if BLKFIN_STAMP

comment 'Half clockin'

config CLKIN_HALF
	bool "Half ClockIn"

comment 'Bypass PLL'

config PLL_BYPASS
	bool "Bypass PLL"

comment 'SDRAM Memory Size'

config MEM_SIZE
	int "SDRAM Memory Size"
	default 32 if EZKIT
	default 128 if BLKFIN_STAMP

comment 'Memory Address Width'

config MEM_ADD_WIDTH
	int "SDRAM Memory Address Width"
	default 9 if EZKIT
	default 11 if BLKFIN_STAMP

comment'Asynchonous Memory Configuration'

menu'EBIU_AMBCTL Global Control' 
config C_AMCKEN
	bool "Enable CLKOUT"
	default y 

config C_CDPRIO
	bool "DMA has priority over core for ext. accesses"
	default n 
choice 
	prompt"Enable Asynchonous Memory Banks"
	default C_AMBEN_ALL 

config C_AMBEN
	bool "Disable All Banks"

config C_AMBEN_B0
	bool "Enable Bank 0"

config C_AMBEN_B0_B1
	bool "Enable Bank 0 & 1"

config C_AMBEN_B0_B1_B2
	bool "Enable Bank 0 & 1 & 2"

config C_AMBEN_ALL
	bool "Enable All Banks"
endchoice
endmenu

menu'EBIU_AMBCTL Control' 
config BANK_0
	hex "Bank 0"
	default 0x7BB0 

config BANK_1
	hex "Bank 1"
	default 0x7BB0

config BANK_2
	hex "Bank 2"
	default 0x7BB0

config BANK_3
	hex "Bank 3"
	default 0x99B3
endmenu

comment 'Baud Rate'

choice
	prompt "Baud Rate"
	default BAUD_57600 
